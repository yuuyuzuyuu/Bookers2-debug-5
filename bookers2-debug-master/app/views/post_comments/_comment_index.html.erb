<% book.post_comments.each do |post_comment| %>
  <% post_comment_user = post_comment.user %>
  <tr>
    <td>
      <%= link_to user_path(post_comment_user), class: "user_#{post_comment_user.id}" do %>
        <%= attachment_image_tag(post_comment_user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
        <%= post_comment_user.name %>
       <% end %>
    </td>
    <td>
      <%= post_comment.comment %>
    </td>
    <% if current_user == post_comment_user %>
    <td>
      <%= link_to "Destroy", book_post_comment_path(post_comment.book_id, post_comment.id), class: "btn btn-sm btn-danger", method: :delete, remote: true %>
    </td>
    <% end %>
  </tr>
<% end %>